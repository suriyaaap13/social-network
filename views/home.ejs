<link rel="stylesheet" href="/css/home.css">
<p></p>
<h1>
    Social Network | <%= title %>
</h1>

<section id="feed-post">
    <h3>Posts</h3>
    <%if(locals.user){%>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" id="post-box" cols="30" rows="3" placeholder="Type your status..." required></textarea>
            <input type="submit" value="Post">
        </form>
    <%}%>
    <div id="post-container">
        <ul>
            <% for(post of posts){%>
                <li>
                    <%if(locals.user && (locals.user.id==post.user.id)){%>
                        <small>
                            <a href="/posts/destroy/<%= post.id %>">X</a>
                        </small>

                    <%}%>   
                    <%= post.content %>
                    <div id="user">
                        <small>
                            <%= post.user.name %>
                        </small>
                    </div>
                    <%if(locals.user){%>
                        <div class="comments-container">
                            <form action="/comments/create" method="POST">
                                <input type="text" name="content" placeholder="Add comment..." required>
                                <input type="hidden" name="post" value="<%=post._id%>">
                                <input type="submit" value="Add comment">
                            </form>
                        </div>
                    <%}%>
                    <div class="post-comments-list-container">
                        <ul id="post-comments-<%= post._id %>">
                            <% for(comment of post.comments){%>
                                <%if(locals.user && ((locals.user.id==comment.user.id)||post.user.id==locals.user.id)){%>
                                    <small>
                                        <a href="/comments/destroy/<%= comment.id %>">X</a>
                                    </small>
                                <%}%>
                                    <p>
                                        <%= comment.content %>
                                        <br>
                                        <small>
                                            <%= comment.user.name %>
                                        </small>
                                    </p>
                            <%}%>
                        </ul>
                    </div>
                    
                </li>
            <%}%>
        </ul>
    </div>
    
</section>
