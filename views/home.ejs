<link rel="stylesheet" href="/css/home.css">
<p></p>
<h1>
    Social Network | <%= title %>
</h1>

<section id="feed-post">
    <h3>Posts</h3>
    <%if(locals.user){%>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" id="post-box" cols="30" rows="3" placeholder="Type your status..."></textarea>
            <input type="submit" value="Post">
        </form>
    <%}%>
    <div id="post-container">
        <ul>
            <% for(post of posts){%>
                <li>
                    <%= post.content %>
                    <div id="user">
                        <small>
                            <%= post.user.name %>
                        </small>
                    </div>
                    
                </li>
            <%}%>
        </ul>
    </div>
</section>
