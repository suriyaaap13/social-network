<link rel="stylesheet" href="../assets/css/header.css">
<header>
    <!-- Page Header -->
    <div id="header-bar">
        <p>
            <a href="/">Social Network</a>
        </p>
        <ul>
            <% if(locals.user){%> 
                <li>
                    <a href="/users/profile/<%=user.id%>">
                        <%= user.name %>
                    </a>
                </li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
            <%}else {%>
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
            <%} %>
        </ul>
    </div>
    

</header>
